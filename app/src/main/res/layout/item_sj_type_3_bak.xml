<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/item_sj_parent_tv_1"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:gravity="center|start"
        android:text="name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="name" />

    <TextView
        android:id="@+id/item_sj_value_tv_1"
        style="@style/style_sj_list_title"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/item_sj_type_3_barrier_1"
        app:layout_constraintEnd_toStartOf="@+id/item_sj_obtain_1"
        app:layout_constraintStart_toEndOf="@+id/item_sj_parent_tv_1"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="value" />

    <TextView
        android:id="@+id/item_sj_value_tv_2"
        style="@style/style_sj_list_title"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/item_sj_type_3_barrier_2"
        app:layout_constraintEnd_toStartOf="@+id/item_sj_obtain_2"
        app:layout_constraintStart_toEndOf="@+id/item_sj_parent_tv_1"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_type_3_barrier_1"
        tools:text="value" />


    <TextView
        android:id="@+id/item_sj_value_tv_3"
        style="@style/style_sj_list_title"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_sj_obtain_3"
        app:layout_constraintStart_toEndOf="@+id/item_sj_parent_tv_1"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_type_3_barrier_2"
        tools:text="value" />


    <TextView
        android:id="@+id/item_sj_obtain_1"
        style="@style/style_sj_list_value"
        app:layout_constraintBottom_toTopOf="@+id/item_sj_type_3_barrier_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />


    <TextView
        android:id="@+id/item_sj_obtain_2"
        style="@style/style_sj_list_value"
        app:layout_constraintBottom_toTopOf="@+id/item_sj_type_3_barrier_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_type_3_barrier_1"
        tools:text="11111111" />


    <TextView
        android:id="@+id/item_sj_obtain_3"
        style="@style/style_sj_list_value"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_type_3_barrier_2"
        tools:text="11111111" />


    <android.support.constraint.Barrier
        android:id="@+id/item_sj_type_3_barrier_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="item_sj_obtain_1,item_sj_value_tv_1" />

    <android.support.constraint.Barrier
        android:id="@+id/item_sj_type_3_barrier_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="item_sj_value_tv_2,item_sj_obtain_2" />

    <View
        android:id="@+id/item_wx_sj_list_div_top"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/lineColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_wx_sj_list_div_1"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/lineColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/item_wx_sj_list_div_center_1"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/lineColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_sj_parent_tv_1"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_value_tv_1" />

    <View
        android:id="@+id/item_wx_sj_list_div_center_2"
        android:layout_width="0dp"
        android:layout_height="1px"
        android:background="@color/lineColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_sj_parent_tv_1"
        app:layout_constraintTop_toBottomOf="@+id/item_sj_value_tv_2" />


    <View
        android:id="@+id/item_sj_h_1_div"
        android:layout_width="1px"
        android:layout_height="0dp"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_sj_parent_tv_1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/item_sj_h_2_div"
        android:layout_width="1px"
        android:layout_height="0dp"
        android:background="@color/line_color"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_sj_value_tv_1"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>